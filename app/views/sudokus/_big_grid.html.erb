

<div class="span4 offset1">

<table class="outer">
	<tr>
		<% 9.times do |i| %>
			<td>
				<table class="inner">
					<tr>
						<% j=0 %>
						<% @sudoku.cube_by_number(i).each do |number| %>
							<td>
								<% if (number==0) %>
									
								<% else %> 
									<%= number %>
								<% end %>
							</td>
							<% if (j==2 || j==5)%>
								</tr><tr>
							<% end %>
							<% j+=1 %>
						<% end %>
					</tr>
				</table>
			</td>
			<% if (i==2 || i==5)%>
				</tr><tr>
			<% end %>
		<% end %>
	</tr>
</table>

</div>

