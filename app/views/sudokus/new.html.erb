<% provide(:title, 'Sudoku') %>
<h1>Sudoku Solver</h1>
<div class="row">
	<div class="span6 offset3">

		<%= form_for(@sudoku) do |f| %>
			<div id="error_explanation">
				<% @sudoku.errors.full_messages.each do |msg| %>
			      <li><%= msg %></li>
			    <% end %>
			</div>
					
			<%= f.label :content, "Name your puzzle" %>
			<%= f.text_field :content %>
						
<!--
		    <%= f.submit class: "btn btn-large btn-primary", value: "Original Puzzle" %>
			
			<%= f.submit class: "btn btn-large btn-primary", value: "Random Puzzle" %>			
			<%# the above button will automatically have name: "commit" included %>
			
			<%= f.submit class: "btn btn-large btn-primary", value: "Create Your Own" %>			
-->
		
			<button class="btn btn-large btn-primary" type="submit" name="create" value="original">Original Puzzle</button>
			<button class="btn btn-large btn-primary" type="submit" name="create" value="random">Random Puzzle</button>
			<button class="btn btn-large btn-primary" type="submit" name="create" value="new">Create Your Own</button>
		
		<% end %>
		
	</div>
</div>