<% provide(:title, 'Edit') %>
<h1>Update your profile</h1>
<div class="row">
	<div class="span6 offset3">
		<%= form_for(@user) do |f| %>
			
<%# Rails knows b/c we are using an existing user, rather than a new user, to
# set up this form to submit a PUT request instead of a POST request --
# this actually happens through a hidden input inside the form that looks like this:
# input name="_method" type="hidden" value="put" %>
			
			<%= render 'shared/error_messages' %>
			<%= render 'fields', f: f %>
			
		    <%= f.submit "Save changes", class: "btn btn-large btn-primary" %>
		<% end %>
		
		<%= gravatar_for @user %>
		<a href="http://gravatar.com/emails" target="_new">change</a>
	</div>
</div>