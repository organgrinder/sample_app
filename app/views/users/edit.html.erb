<% provide(:title, 'Edit') %>
<h1>Update your profile</h1>
<div class="row">
	<div class="span6 offset3">
		<%= form_for(@user) do |f| %>
			
<%# Rails knows b/c we are using an existing user, rather than a new user, to
# set up this form to submit a PUT request instead of a POST request --
# this actually happens through a hidden input inside the form that looks like this:
# input name="_method" type="hidden" value="put" %>
			
			<%= render 'shared/error_messages' %>

			<%= f.label :name %>
			<%= f.text_field :name %>

		    <%= f.label :email %>
		    <%= f.text_field :email %>

		    <%= f.label :password %>
		    <%= f.password_field :password %>

		    <%= f.label :password_confirmation, "Confirmation" %>
		    <%= f.password_field :password_confirmation %>

		    <%= f.submit "Save changes", class: "btn btn-large btn-primary" %>
		<% end %>
		
		<%= gravatar_for @user %>
		<a href="http://gravatar.com/emails">change</a>
	</div>
</div>